<%= render 'tickets/notice', notice: notice %>

<div>
    <h1 class="float-left">Tickets</h1>
    <%= link_to 'New Ticket', new_ticket_path, class: "float-right btn btn-primary " %>
</div>
<table class="table table-striped">
  <thead class="thead-dark">
  <tr>
    <th>Title</th>
    <th>Number</th>
    <th>Due Date</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.title.humanize %></td>
      <td><%= ticket.number %></td>
      <td><%= ticket.due_date %></td>
      <td><%= link_to 'Show', ticket, class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_ticket_path(ticket), class: " btn btn-info" %></td>
      <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>